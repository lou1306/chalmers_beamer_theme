\ProvidesPackage{beamerthemechalmersposter}

\mode<presentation>

\newcommand\contactauthor[1]{\newcommand{\insertcontactauthor}{#1}}
\newcommand\authormail[1]{\newcommand{\insertauthormail}{#1}}

%
% Colors
%

\definecolor{grey_light}{HTML}{cccccc}
\definecolor{grey_dark}{HTML}{333333}
\definecolor{red_dark}{HTML}{be0208}
\definecolor{red_light}{HTML}{FCB5B6}
\definecolor{none}{HTML}{FF0000}
%
% Header
%

\setbeamercolor{headline}{fg = none, bg = black}

%title
\setbeamercolor{titleline}{fg = none, bg = white}
\setbeamercolor{title in headline}{fg = black}
\setbeamerfont{title in headline}{series = \bfseries, size = \LARGE}
% author
\setbeamercolor{author in headline}{fg = white}
\setbeamerfont{author in headline}{size = \normalsize, series = \mdseries}
% affiliation
\setbeamercolor{institute in headline}{fg = white}
\setbeamerfont{institute in headline}{size = \normalsize, series = \bfseries}


%
% Footer
%
\setbeamercolor{separation line}{bg = black}
\setbeamercolor{footline}{fg = none, bg = none}
\setbeamerfont{footline}{size = \large, series = \bf}

\setbeamercolor{framesubtitle}{fg = none, bg = grey_dark}
\setbeamercolor{author in head/foot}{fg=white, bg = black}
\setbeamercolor{title in head/foot}{fg = none, bg = none}

%
% Block appearance
%

\setbeamercolor*{normal text}{fg = black, bg = white}
\setbeamercolor*{block body}{fg = black, bg = white}
\setbeamercolor*{block title}{fg = white, bg = black}
\setbeamerfont{block title}{size = \large, series = \bf}
\setbeamercolor{upper separation line head}{fg = none}
\setbeamercolor{lower separation line head}{fg = none, bg = white}

\setbeamercolor*{block body alerted}{fg = black, bg = red_light }
\setbeamercolor*{block title alerted}{fg = white,  bg = red_dark}

%
% Example
%

\setbeamercolor*{example body}{fg = none,bg = none}
\setbeamercolor*{example text}{fg = none, bg = none}
\setbeamercolor*{example title}{bg = none, fg = none}

\setbeamercolor{alerted text}{fg = black}
\setbeamerfont{alerted text}{series = \bfseries}
\setbeamercolor{structure}{fg = black}
\setbeamerfont{structure}{series = \bfseries}

\setbeamertemplate{itemize items}[circle]
\setbeamercolor{itemize item}{fg = black, bg = white}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Block environment
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded = false, shadow = false, leftskip = 1cm, colsep* =.75ex]%
    {block title}%
    \rule{0pt}{10pt}
    \usebeamerfont*{block title}\insertblocktitle
    \rule{0pt}{10pt}
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded = false, shadow = false, colsep* = .75ex, sep = .75ex, vmode]
    {block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Alerted block environment
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{block alerted begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded = false, shadow = false, leftskip = 1cm, colsep* =.75ex]%
    {block title alerted}%
    \rule{0pt}{10pt}
    \usebeamerfont*{block title alerted}\insertblocktitle
    \rule{0pt}{10pt}
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body alerted}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body alerted}%
  \begin{beamercolorbox}[rounded = false, shadow = false, colsep* = .75ex, sep = .75ex, vmode]
    {block body alerted}%
    \ifbeamercolorempty[bg]{block body alerted}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Headline
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.1\paperwidth}
      \end{column}
      \begin{column}{.25\paperwidth}
        \rule{0pt}{2cm}
        \begin{center}
          \includegraphics[width=\textwidth]{figures/logo_a_h_w}
        \end{center}
        \rule{0pt}{1cm}
      \end{column}
      \begin{column}{.62\paperwidth}
        \vskip3cm
        \raggedleft
%%%%%%%%% author
        \usebeamerfont{author in headline}{%
          \usebeamercolor{author in headline}{
            \color{fg}\insertauthor%
          }\\[1ex]%
        }
%%%%%%%%% institute
        \usebeamerfont{institute in headline}{%
          \usebeamercolor{institute in headline}{%
            \color{fg}\insertinstitute%
          }\\[1ex]%
        }
        \vskip1ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2cm}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{titleline}
    \begin{columns}[T]
      \begin{column}{.1\paperwidth}
      \end{column}
      \begin{column}{0.8\paperwidth}
        \vskip1cm
        \centering
        \usebeamercolor{title in headline}{%
          \usebeamerfont{title in headline}{%
            \linespread{1.5}
            \color{fg}\inserttitle%
            \linespread{1.0}
          }\\[1ex]%
        }
        \vskip1cm
      \end{column}
      \begin{column}{.1\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2cm}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Headline
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{footline}{
  \begin{beamercolorbox}[ht=2.2ex, leftskip=1cm, rightskip=1cm]{author in head/foot}%
    \usebeamerfont{footline}
    \insertcontactauthor
    \hfill
    \href{mailto:\insertauthormail}{\insertauthormail}
    \vspace{0.1ex}
  \end{beamercolorbox}
}


\setbeamertemplate{bibliography item}[text]
\setbeamertemplate{caption}[numbered]{}% Number float-like environments

\mode<all>
