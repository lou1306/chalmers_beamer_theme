\ProvidesPackage{beamerthemechalmersposter}

\mode<presentation>

\definecolor{grey_light}{HTML}{cccccc}
\definecolor{grey_dark}{HTML}{333333}
\definecolor{red_dark}{HTML}{be0208}
\definecolor{red_light}{HTML}{FCB5B6}
\definecolor{none}{HTML}{FF0000}

\setbeamercolor{headline}{fg = none, bg = black}
\setbeamercolor{titleline}{fg = none, bg = white}

\setbeamercolor{footline}{fg = none, bg = none}
\setbeamerfont{footline}{size = \large, series = \bf}

\setbeamercolor{separation line}{bg = grey_dark}

\setbeamercolor{title in headline}{fg = black}
\setbeamerfont{title in headline}{series = \bfseries, size = \LARGE}

\setbeamercolor{author in headline}{fg = white}
\setbeamerfont{author in headline}{size = \normalsize, series = \mdseries}
\setbeamercolor{institute in headline}{fg = white}
\setbeamerfont{institute in headline}{size = \normalsize, series = \bfseries}

\setbeamercolor{framesubtitle}{fg = none, bg = grey_dark}
\setbeamercolor{author in head/foot}{fg=white, bg = black}
\setbeamercolor{title in head/foot}{fg = none, bg = none}

%
% Block appearance
%

\setbeamercolor*{normal text}{fg = black, bg = white}
\setbeamercolor*{block body}{fg = black, bg = white}
\setbeamercolor*{block title}{fg = white, bg = black}
\setbeamerfont{block title}{size = \large, series = \bf}
\setbeamercolor{upper separation line head}{fg = none}
\setbeamercolor{lower separation line head}{fg = none, bg = white}

%
% Example
%

\setbeamercolor*{example body}{fg = none,bg = none}
\setbeamercolor*{example text}{fg = none, bg = none}
\setbeamercolor*{example title}{bg = none, fg = none}

\setbeamercolor{alerted text}{fg = black}
\setbeamerfont{alerted text}{series = \bfseries}
\setbeamercolor{structure}{fg = black}
\setbeamerfont{structure}{series = \bfseries}

\setbeamertemplate{itemize items}[circle]
\setbeamercolor{itemize item}{fg = black, bg = white}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

\newenvironment<>{myblock}[1]{%
 \begin{actionenv}#2%
 \def\insertblocktitle{\centering#1}%
 \par%
 \usebeamertemplate{block begin}\leftskip=14pt\rightskip=14pt\vspace{10pt}}
 {\par\vspace{10pt}\usebeamertemplate{block end}
 \end{actionenv}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% !!! This environment can't both have nice margins AND display the contained text as justified:
% We preferentially use the above but keep this one just-in-case

\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded = false, shadow = false, leftskip = 1cm, colsep* =.75ex]%
    {block title}%
    \rule{0pt}{10pt}
    \usebeamerfont*{block title}\insertblocktitle
    \rule{0pt}{10pt}
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded = false, shadow = false, colsep* = .75ex, sep = .75ex, vmode]
    {block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

