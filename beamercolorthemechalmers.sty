\definecolor{gublue}{HTML}{194461} % As per pptx template
%\definecolor{gublue}{HTML}{004b89} % As per style guide, but too bright
\definecolor{chalmerscopper}{HTML}{006c5c}


\if@copper%
\colorlet{MAINCOLOR}{chalmerscopper}
\else%
\colorlet{MAINCOLOR}{gublue}
\fi

\mode<presentation>

% Title
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{title}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{institute}{fg=white}
\setbeamercolor*{date}{fg=white}

% Frame
\setbeamercolor*{frametitle}{bg=MAINCOLOR, fg=white}
\setbeamercolor*{date in head/foot}{bg=white, fg=black}

% Normal Text
\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor{itemize item}{fg=MAINCOLOR}
\setbeamercolor{enumerate item}{fg=MAINCOLOR}

% Blocks
\setbeamercolor*{structure}{bg=white, fg=black}

% Blocks
\setbeamercolor*{block title}{bg=MAINCOLOR, fg=white}

% Alerted
\setbeamercolor{block title alerted}{fg=red_dark, bg=red_light}
\setbeamercolor{block body alerted}{bg=red_light}
\setbeamercolor*{alerted}{fg=black, bg=white}
\setbeamercolor*{alerted text}{fg=red_dark, bg=white}

% Example
\setbeamercolor{block title example}{fg=grey_dark, bg=grey_light}
\setbeamercolor{block body example}{bg=grey_light}
\mode <all>

% Theorem
\setbeamercolor{theorem title}{fg=grey_dark, bg=grey_light}
\setbeamercolor{theorem body}{bg=grey_light}
\mode <all>





% Patch \maketitle to change title slide bg (and do some other sketchy stuff)
\let\oldmaketitle\maketitle
\renewcommand{\maketitle}{%
\setbeamercolor*{background canvas}{bg=MAINCOLOR}%
\setbeamercolor*{date in head/foot}{bg=MAINCOLOR, fg=MAINCOLOR}
{\setbeamertemplate{logo}{}\oldmaketitle}%
\setbeamercolor*{background canvas}{bg={}}%
\setbeamercolor*{date in head/foot}{bg=white, fg=black}
}
